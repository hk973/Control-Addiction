<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/settingsAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Opening Method"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/openMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/clickOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Single Click"/>

                <RadioButton
                    android:id="@+id/holdOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Long Press (Hold)"/>
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Theme"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/themeselection_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/grayd_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Follow System Theme"/>

                <RadioButton
                    android:id="@+id/darkmode_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"/>

                <RadioButton
                    android:id="@+id/lightmode_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Light Mode"/>
                <RadioButton
                    android:id="@+id/gray_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gray Mode"/>
            </RadioGroup>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/dropdown_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Clickable Header -->
        <TextView
            android:id="@+id/dropdown_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Theme Options"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold" />

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/dropdown_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- FAQ 1 -->
            <TextView
                android:id="@+id/faq_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is Dark Mode?"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true" />

            <TextView
                android:id="@+id/faq_answer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Mode is a UI setting that uses darker colors to reduce eye strain and save battery."
                android:visibility="gone"
                android:padding="8dp" />

            <!-- FAQ 2 -->
            <TextView
                android:id="@+id/faq_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How does Gray Mode work?"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true" />

            <TextView
                android:id="@+id/faq_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gray Mode applies a grayscale filter to the UI to minimize visual distractions."
                android:visibility="gone"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>


