<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/dot1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dot_unselected" />

    <View
        android:id="@+id/dot2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dot_unselected" />

    <View
        android:id="@+id/dot3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dot_unselected" />
</LinearLayout>
    <Button
        android:id="@+id/notificationPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Notification Permission" />

    <Button
        android:id="@+id/usagePermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Usage Permission"
        android:visibility="gone" />

    <Button
        android:id="@+id/setLauncherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Home Launcher Permission"
        android:visibility="gone" />

</LinearLayout>
