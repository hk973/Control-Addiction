<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="android:colorControlNormal">?android:attr/textColorSecondary</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/search_box_stroke</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="QuickSettingsTile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="QuickSettingsTileIcon">
        <item name="android:layout_width">@dimen/tile_size</item>
        <item name="android:layout_height">@dimen/tile_size</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/quick_settings_tile_background</item>
    </style>

    <style name="QuickSettingsTileIconActive">
        <item name="android:layout_width">@dimen/tile_size</item>
        <item name="android:layout_height">@dimen/tile_size</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">@drawable/quick_settings_tile_background_active</item>
    </style>

    <style name="QuickSettingsTileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tile_text_margin_top</item>
        <item name="android:textColor">@color/tile_text</item>
        <item name="android:textSize">@dimen/tile_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SliderControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/slider_section_margin_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="PinnedDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="GrayscaleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#353535</item>
        <item name="backgroundTint">#686868</item>
    </style>
</resources>